<div class="card mb-3" style="max-width: 540px;">
  {{#if error }}
  <h3>Lo lamento, no se encontro ese ID</h3>
  {{ else }}
  <form action="/pokemon/edit/one/{{ pokemon._id }}" method="post">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{ pokemon.image }}" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"> {{ pokemon.name }} </h5>
          <textarea name="pokemon_description" id="" cols="30" rows="10" placeholder="Insertar descripcion">{{ pokemon.description }}
        </textarea>
          <p class="card-text"><small class="text-muted"> {{ pokemon.type }} </small></p>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <button class="btn btn-success" type="submit">Actualizar</button>
        <a class="btn btn-danger" href="/pokemon/delete/one/{{ pokemon._id }}" >Eliminar</a>
      </div>
    </div>

  </form>
  {{/if }}

</div>